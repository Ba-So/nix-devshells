{
  "mcpServers": {
    "codanna": {
      "type": "stdio",
      "command": "codanna",
      "args": [
        "serve",
        "--watch",
        "--watch-interval",
        "5"
      ]
    },
    "serena": {
      "type": "stdio",
      "command": "serena",
      "args": [
        "start-mcp-server",
        "--transport",
        "stdio",
        "--project",
        "."
      ],
      "env": {}
    },
    "claude-task-master": {
      "type": "stdio",
      "command": "task-master-mcp",
      "args": [],
      "env": {
        "TASKMASTER_DIR": ".taskmaster"
      }
    }
  }
}
